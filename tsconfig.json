{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noImplicitThis" : false,
        "removeComments": false,
        // "preserveConstEnums": true,
        "allowJs" : true,
        
        "noImplicitReturns" : true,
        "checkJs" : true,
        "diagnostics" : true,
        "sourceMap": true,
        "strict" : true,
        "rootDir": "src",
        "outDir": "distts",
        "target": "es5",
        "lib" : [
            "es2015",
            "es2015.iterable",
            "dom"
        ],
        "paths": {
            "allende/*":["src/app/allende/*"],
            "allendeModules/*":["src/app/allende/*"],
            "core/*":["src/app/core/*"],
            "integration/*":["src/app/integration/*"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude" : [
        "node_modules",
        "src/app/**/*Spect.js",
        "src/app/**/*.spect.js",
        "src/app/**/*Spect.ts",
        "src/app/**/*.spect.ts"
    ]
}